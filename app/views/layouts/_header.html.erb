<header>
  <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
    <div class="container">
      <a class="navbar-brand p-0" href="/"><span><%= image_tag '', size: "60x50" %></span></a>
      <button class="navbar-toggler bg-secondary" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <li>
            <%= link_to clips_path, data: { turbolinks: false }, class: 'nav-link text-dark' do %>
              <i class="far fa-play-circle"></i> Clip
            <% end %>
          </li>
          <li>
            <%= link_to playlists_path, data: { turbolinks: false }, class: 'nav-link text-dark' do %>
              <i class="far fa-play-circle"></i> プレイリスト
            <% end %>
          </li>
        <% if user_signed_in? %>

          <li class="log_out">
            <%= link_to user_path(current_user.id), data: { turbolinks: false }, class: 'nav-link text-dark' do %>
              <i class="fas fa-user"></i> マイページ
            <% end %>
          </li>
          <li class="log_out">
            <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-dark' do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to new_user_registration_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-user-plus"></i> 新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-sign-in-alt"></i> ログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>